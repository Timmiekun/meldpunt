@using Meldpunt.Models;
@using Meldpunt.Utils;
@model PlaatsModel
@{
  ViewBag.Title = "Admin";
  var locations = ViewBag.Locations;
  Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>Gemeente @Model.Gemeentenaam</h1>

<a class="viewPage" href="/@Model.Gemeentenaam" target="_blank">Pagina bekijken</a>

 @if (Model.Plaatsen.Count > 1)
 {
  <p>Onder de gemeente @Model.Gemeentenaam vallen de plaatsen: @String.Join(", ", Model.Plaatsen.Select(p => p.Capitalize()))</p>
 }


<form method="post">   
  <div  class="field">
    <label for="publish">
      @Html.CheckBoxFor(p => p.Published)
      @*<input type="checkbox" name="Published" @if(Model.Published){<text>checked="checked"</text>}/>*@ 
      gepubliceerd
    </label>
  </div>
  
  <div class="field">
    <label for="MetaDescription">Meta description</label>
    <textarea id="MetaDescription" style="width:100%;height: 40px;" name="MetaDescription" type="text" >@Model.MetaDescription</textarea>
  </div>

  <div class="field">
    <label for="content">Content</label>
    <textarea id="content" name="content" class="richtext">
      @Model.Content
    </textarea>
  </div>
  <input type="hidden" name="Gemeentenaam" value="@Model.Gemeentenaam" />
  <input type="submit" value="opslaan" />
</form>

