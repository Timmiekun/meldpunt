@using Meldpunt.Models;
@using Meldpunt.Utils;
@model List<PageModel>
  @{
    ViewBag.Title = "Admin";
    var locations = ViewBag.Locations;
    Layout = "~/Views/Shared/_Admin.cshtml";
  }
  <h1>Beheer pagina's</h1>

  <div class="list-item list-item-header">
    <div class="title">Titel</div>
    <div class="url">Url</div>
  </div>

  @foreach (PageModel p in Model)
  {
    <div class="list-item">
      <div class="title"><a href="/admin/editpage/@p.Id">@p.Title</a></div>
      <div class="url">@p.Url</div>
    </div>
  }

  <a href="/admin/newpage" class="btn btn-info new-button js-new-page">Nieuwe pagina</a>

  @section menu{
    <div class="menu">
      <ul>
        <li><a href="/admin/pages">Pagina's</a></li>
        <li><a href="/admin/places">Plaatsen</a></li>
        <li><a href="/admin/redirects">Redirects</a></li>
      </ul>
    </div>
  }
