@using Meldpunt.Models;
@using System.Collections.Specialized;
@model SearchResultModel

@{
  int numOfPages = Model.Total / SearchResultModel.PageSize;
  int currentPage = 0;
  Int32.TryParse(Request.QueryString["page"], out currentPage);


  NameValueCollection qs;
  Request.QueryString.CopyTo(qs);
  qs.Remove("page");


  for (int i = 0; i <= numOfPages; i++)
  {
    string className = "btn-secondary";
    if (currentPage == i)
    {
      className = "btn-info";
    }

    <a class="btn  @className" href="?@qs.ToString()&page=@i">@(i + 1)</a>
  }
}