@using Meldpunt.Models;
@{
  List<PageModel> pagesForTabs = ViewBag.NavItems as List<PageModel>;
  List<PageModel> breadcrumbs = ViewBag.BreadCrumbs as List<PageModel>;
}

<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <title>Meldpunt ongedierte</title>
  <meta http-equiv="Content-Type" lang="nl" content="text/html; charset=utf-8">
  <meta name="description" lang="nl" content="Meldpunt ongedierte 0900-2556677">
  <meta name="keywords" lang="nl" content="meldpunt ongedierte, wespen, houtworm, muizen, ratten, vlooien, papiervisjes, wespen bestrijding, wespen overlast, wespennest, wespenest, plaag, wespenplaag, vlooienplaag. ">
  <meta name="verify-v1" lang="nl" content="8aAymk/nYCxbP0Y9bqA+9BQWFV1ubxWH6L4ZCHAcoYA=">
  <meta name="robots" content="index,follow">
  <link type="text/css" rel="stylesheet" href="/css/reset.css">
  <link type="text/css" rel="stylesheet" href="/css/main.css">
  <link type="text/css" rel="stylesheet" href="/css/suggest.css">
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
  <script type="text/javascript" src="/Scripts/meldpunt.js">;</script>
  <script type="text/javascript" src="/Scripts/suggest.js">;</script>
  <script type="text/javascript" src="/Scripts/xmlhttp.js">;</script>
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-24228769-1']);
    _gaq.push(['_trackPageview']);

    (function () {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
		 
  </script>
</head>
<body>
  <div id="main" class="main">

      <div id="breadcrumbs">
        <a href="/">Home</a>
        @if (breadcrumbs.Count > 0)
        {          
        <span> ></span>
        }
        @for (int i = 0; i < breadcrumbs.Count; i++ )
        {
          <a href="@breadcrumbs[i].Url">@breadcrumbs[i].Title</a>
          if (i < breadcrumbs.Count - 1)
          {
            <span> > </span>
          }
        }
      </div>
    
    <div id="header">      
      <form method="post" autocomplete="off" action="/zoek" class="zoekForm">
      <input id="zoek" placeholder=" b.v. Amsterdam" type="text" name="plaats" onkeyup="suggest.getSuggests(event,this);"><input
        type="submit" value="zoek" class="searchSubmit"></form>
      <div id="suggests"
        class="suggest-hidden">
      </div>
    </div>
    
    <div class="content">
      @RenderBody()
    </div>

     <div id="tabs">
      @foreach (PageModel tabItem in pagesForTabs)
        {
          string className = "tabItem";
          if (((string)ViewBag.Url).Contains(tabItem.Id))
          {
            className += " activeTab";
          }
        <a class="@className" href="@tabItem.Url">@tabItem.Title</a>
        }
      </div>

         
        @RenderSection("menu")        
  
    <div class="footer">
      <p class="disclaimer">&#160; @*<a href="/sitemap">sitemap</a>*@</p>
    </div>
  </div>
  <div class="topBar">
    <h2><a href="/">Centraal Meldpunt Ongedierte</a></h2>    
  </div>

  <script type="text/javascript">
    var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
    document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
  </script>
  <script type="text/javascript">
    try {
      var pageTracker = _gat._getTracker("UA-2150493-3");
      pageTracker._trackPageview();
    } catch (err) { }
  </script>
</body>
</html>
